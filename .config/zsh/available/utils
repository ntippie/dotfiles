alias todo='function _todo(){ [ -z "$1" ] && cd "$XDG_DOCUMENTS_DIR"/todo || vi "$XDG_DOCUMENTS_DIR"/todo/"$1".md };_todo'
alias todo-push="git -C "$XDG_DOCUMENTS_DIR"/todo now"
alias todo-pull="git -C "$XDG_DOCUMENTS_DIR"/todo pull --commit"

alias download='curl -#fLgR --retry 3 -C - -O'
alias tmp-upload='function _tmpup(){ aws s3 cp "$1" "s3://${AWS_PROFILE}-tmp/$(basename "$1")"; };_tmpup'
alias tmp-download='function _tmpdown(){ aws s3 cp "s3://${AWS_PROFILE}-tmp/$(basename "$1")" "$1"; };_tmpdown'

_awslogin() { aws-vault login ${*:-$AWS_PROFILE} }
alias aws-login='_awslogin'

alias ai='aichat -s'
alias pls='function _pls(){ AICHAT_MODEL=openai:gpt-5-nano aichat -e "${*:--i}" };_pls'

alias mkvenv='python3 -m venv .venv'
alias venv='source .venv/bin/activate'

# Edit line in vim with ctrl-e:
autoload edit-command-line; zle -N edit-command-line
bindkey '^e' edit-command-line
