[core]
  editor = vim

[user]
  email = nate@tippie.com
  name = Nate Tippie

[init]
  defaultBranch = main

[push]
  default = simple
  autoSetupRemote = true
  
[log]
  decorate = auto
        
[pull]
  rebase = false

[alias]
  a = !git add -A
  ac = !git add -A && git commit -m
  cp = "!f() { git commit -m \"$@\"; git push; }; f"
  acp = "!f() { git add -A && git commit -m \"$@\"; git push; }; f"
  now = "!git add -A && git commit -m \"$(date -Iseconds) -- $(cat /etc/hostname)\"; git push"
