setopt aliases # needed for integrating inside of vim

alias ls='CLICOLOR=1 ls -lFh -G --color=auto'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ip='ip -color=auto'
export LESS='-R --use-color -Dd+r$Du+b'
alias view='less'
alias edit="$EDITOR"
alias vi='vim'

alias sso='function _sso(){ aws sso login --profile $1 };_sso'

alias venv='source .venv/bin/activate'

alias aichat='AICHAT_CONFIG_DIR="$XDG_CONFIG_HOME"/aichat OPENAI_API_KEY="$(security find-generic-password -s 'chatgpt' -a 'nate@tippie.com' -w)" aichat'
alias chatgpt='aichat'
alias pls='function _pls(){ aichat -r shell "$*" };_pls'

alias cheat='function _cheat(){ curl https://cheat.sh/$* };_cheat'

